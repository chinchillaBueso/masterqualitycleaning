extends ../layout/index

block contenido 
    main.container.login
        .row.justify-content-center
         .col-12.col-md-7
           h2 Inicio de Sesión
           
           form(action='/login' method="POST")
            
            .form-group 
                label(for="usuario") 
                 i.fa-solid.fa-user
                 |  Usuario
                input(id="usuario",class="form-control", type="text", placeholder="Ingresa tu Usuario." , name="usuario",required value=usuario)
                br
            .form-group 
                label(for="correo") 
                 i.fa-solid.fa-envelope                 
                 |  Correo
                input(id="correo",class="form-control", type="email", placeholder="Ingresa tu correo" , name="correo",required value=correo)
                br
            .form-group 
                label(for="password") 
                i.fa-solid.fa-unlock-keyhole
                |  Cantraseña 
                input#password(class="form-control" type="password" name="password", placeholder="Password",required value=password)
                br
                if(validaciones)
                  each validacion in validaciones
                   p.alert.alert-danger=validacion.msg
                if mensaje
                 p.alert.alert-danger=mensaje
            .form-group
              input(type="submit" value="Iniciar Sesión" class="btn btn-success form-control")      